<?jelly escape-by-default='true'?>
<j:jelly xmlns:j="jelly:core" xmlns:st="jelly:stapler" xmlns:d="jelly:define" xmlns:l="/lib/layout" xmlns:t="/lib/hudson" xmlns:f="/lib/form">

    <f:entry title="${%RetentionTimeInHours}" field="retentionInHours">
        <f:textbox default="24"/>
    </f:entry>

    <f:entry title="${%Pool_Size}" field="poolSize">
        <f:textbox default="3" />
    </f:entry>

    <f:entry title="${%Single_Use_Agents}" field="singleUseAgents">
        <f:checkbox/>
    </f:entry>

    <f:optionalBlock title="${%Enable_Dynamic_Buffer}" field="dynamicBufferEnabled" inline="true">
        <f:entry title="${%Buffer_Percentage}" field="bufferPercentage">
            <f:textbox default="10"/>
        </f:entry>

        <f:entry title="${%Minimum_Buffer}" field="minimumBuffer">
            <f:textbox default="0"/>
        </f:entry>

        <f:entry title="${%Maximum_Buffer}" field="maximumBuffer">
            <f:textbox default="0"/>
        </f:entry>
    </f:optionalBlock>

</j:jelly>
